{
    "manifestVersion": "v0.1",
    "description": "machete instance driver for aws",
    "documentation": "https://docs.docker.com/engine/extend/plugins/",
    "entrypoint": ["driver", "aws", "--listen=/run/docker/plugins/aws-instance.sock"],
    "network": {
        "type": "host"
    },
    "interface" : {
        "types": ["docker.instanceDriver/1.0"],
        "socket": "aws-instance.sock"
    },
    "mounts":[
        {
            "Type": "bind",
            "Destination": "/var/run",
            "Source": "/var/run",
            "Description": "docker socket"
        },
        {
            "Type": "bind",
            "Destination": "/run/docker",
            "Source": "/run/docker",
            "Description": "plugins socket"
        }
    ]
}
